<div class="text-center mt-5">
<h1 class="mb-3 border-bottom border-info">All Events</h1>
<h2> Upcoming Events </h2>

<div class="d-flex flex-column">
  
  <% @upcoming.each do |event| %>
  <div class="d-flex justify-content-center">
    <p>Title: </p>
    <%= event.title %>
  </div>
  <div class="d-flex justify-content-center">
  <p>Descriptions: </p>
  <%= event.description %>
  </div>
  <div class="d-flex justify-content-center">
  <p>Location: </p>
    <%= event.location %>
  </div>
  <div class="d-flex justify-content-center">
  <p>Date: </p>
    <%= event.date %>
  </div> 
    
    <div class="border-bottom border-warning pb-3 mb-2">
       <% if logged_in? %>
        <%= link_to 'Attend Event', attendences_path(:attended_event_id => event.id, :event_attende_id => current_user.id), :method => :post %><br>
        <%= link_to 'Events Details', event_path(event) %>
      <% end %>
    </div>
 
  <% end %>

</div>

<h2>Past Events</h2>
<div class="d-flex flex-column">
  
  <% @past.each do |event| %>
  <div class="d-flex justify-content-center">
    <p>Title: </p>
    <%= event.title %>
  </div>
  <div class="d-flex justify-content-center">
  <p>Descriptions: </p>
  <%= event.description %>
  </div>
  <div class="d-flex justify-content-center">
  <p>Location: </p>
    <%= event.location %>
  </div>
  <div class="d-flex justify-content-center">
  <p>Date: </p>
    <%= event.date %>
  </div> 
    
    <div class="border-bottom border-warning pb-3 mb-2">
       <% if logged_in? %>
        <%= link_to 'Events Details', event_path(event) %>
      <% end %>
    </div>
 
  <% end %>

</div>




</div>
