<h1>All Events - INDEX</h1>

<% @events.each do |event| %>
    <%= event.description %><br>
    <% if logged_in? %>
      <%= link_to 'Attend', attendences_path(:attended_event_id => event.id, :event_attende_id => current_user.id), :method => :post %><br>
      <%= link_to 'Events Details', event_path(event) %>
    <% end %>
  <% end %>
<br>
  <% if !logged_in? %>
    <%= link_to "Log In", new_session_path %>
   <% else %>
   <%= link_to "Create a new Event", new_event_path %><br>
   <%= link_to "Log Out", session_path(session[:username]), method: :delete %><br>
  <% end %>