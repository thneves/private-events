<h1>Private Events</h1>

<% if logged_in? %>

<p>You are logged in: <%= current_user.username %> </p>

<%= link_to "Log Out", session_path(session[:username]), method: :delete %><br>

<%= link_to "Create a new Event", new_event_path %>

<% else %>

<%= link_to "Log In", new_session_path %><br><br>

<%= link_to "Sign Up", new_user_path %>

<% end %>

